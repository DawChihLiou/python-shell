{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Current TS Tests File",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "args": ["-r", "ts-node/register", "${relativeFile}","--ui","tdd","--no-timeouts"],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector"
      }
    ]
  }